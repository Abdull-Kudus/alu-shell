#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely every 2 seconds,
# handles SIGTERM and SIGINT signals, and deletes its PID file upon termination.

# Create the PID file with the script's PID
echo $$ > /var/run/myscript.pid

# Trap SIGTERM and SIGINT signals
trap "echo 'I hate the kill command'" SIGTERM
trap "echo 'Y U no love me?!'" SIGINT

# Trap SIGTERM to delete the PID file and terminate the script
trap "rm -f /var/run/myscript.pid; exit" SIGQUIT SIGTERM

# Loop indefinitely and print "To infinity and beyond"
while true; do
    echo "To infinity and beyond"
    sleep 2
done
